<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Page</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="user-info-container">
            <form method="post" action="/user/create-user">

                <h1 class="mt-5">Create user form</h1>
                <div class="mb-3 mt-4">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control"name="username" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="table-user pt-5">
            <div class="user-list">
                <h2>User list</h2>
            </div>
            <table class="table table-hover table-responsive-xxl">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Email</th>
                        <th scope="col">Username</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% listUser.forEach((user, index) => { %>
                        <tr>
                            <th scope="row"><%= index + 1 %></th>
                            <td><%= user.email %></td>
                            <td><%= user.username %></td>
                            <td>
                                <a class="btn btn-info" href="user/update-user/<%= user.id %>">Edit</a>
                                <form style="display: inline" method="post" action="/delete-user/<%=user.id %>">
                                    <button class="btn btn-danger">Delete</button>
                                </form>

                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            

        </div>
    </div>
</body>
</html>